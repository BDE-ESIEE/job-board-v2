{% extends 'admin.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <h2>Enregister un nouveau job</h2></br>
            {% if not form.vars.valid %}
                <div class="alert alert-danger alert-dismissable">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    {% for child in form.children %}
                        {% for error in child.vars.errors %}
                            {{error.message}}{% if not loop.last %}</br>{% endif %}
                        {% endfor %}
                    {% endfor %}
                </div>
            {% endif %}
            <form method="POST" {{ form_enctype(form) }}>
                {{ form_widget(form._token) }}
                <div class="form-group">
                    <label>Titre du job *</label>
                    {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    <label>Titre du job *</label>
                    {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    <label>Nom</label>
                    {{ form_widget(form.authorName, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    <label>Email</label>
                    {{ form_widget(form.authorEmail, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    <label>Téléphone</label>
                    {{ form_widget(form.authorTelephone, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="checkbox">
                    <label>{{ form_widget(form.published) }} Visible</label>
                </div>
                <div class="form-group">
                    <label>Texte de l'annonce *</label>
                    {{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}
                </div>
                <button type="submit" class="btn btn-info">Enregistrer</button>
            </form>
        </div>
    </div>
{% endblock %}